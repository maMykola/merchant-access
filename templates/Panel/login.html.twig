{% extends 'base.html.twig' %}

{% block title %}Merchant login{% endblock %}

{% block body %}
    <div class="container">
      <div id="login-form">
        <header align="center">
          <h1>Login</h1>
        </header>
        <form class="form-horizontal" method="post" name="login_form">
          <div class="form-group {{ customer.hasError('email') ? 'has-error' : '' }}">
            <label for="inputEmail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="customer[email]" maxlenght="60" value="{{ customer.email }}">
              {% if customer.hasError('email') %}
                <span id="helpBlock" class="help-block">{{ customer.errorString('email') }}</span>
              {% endif %}
            </div>
          </div> 
          <div class="form-group {{ customer.hasError('password') ? 'has-error' : '' }}">
            <label for="inputPassword" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="customer[password]" maxlenght="60">
              {% if customer.hasError('password') %}
                <span id="helpBlock" class="help-block">{{ customer.errorString('password') }}</span>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
              Have no account? <a href="/../registration.php">Register<a>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default" name="buttonSubmit">Sign In</button>
            </div>
          </div>
        </form>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ captcha.jSCode|raw }} 
{% endblock %}
